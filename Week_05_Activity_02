
class Person:
    """Represents a general person with basic details."""
    
    def __init__(self,name,address,taxcode,id,age,salary):
        self.name = name
        self.age = age
        self.id = id
        self.address= address
        self.salary = salary
        self.tax_code = taxcode

    def get_details(self):
        return f"Name: {self.name}, ID: {self.id}"

class Student(Person):

    def __init__(self, name, id, grade, address,age):
        super().__init__(name, id,age)
        self.grade = grade
        self.address = address
        self.age = age
        

    def get_details(self):
        return f"Name: {self.name}, ID: {self.id}, Grade: {self.grade}"


student = Student("Oshadee", 5678, "B+","Auckland",27 )
print(student.get_details())
